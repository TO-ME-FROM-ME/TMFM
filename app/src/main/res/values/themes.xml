<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TO_ME_FROM_ME" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="windowNoTitle">true</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
        <item name="android:fontFamily">@font/notosans</item>
    </style>

    <style name="Theme.TO_ME_FROM_ME" parent="Base.Theme.TO_ME_FROM_ME" />



    <!--    BottomSheet 배경색상-->
    <style name="TransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>


    <!-- BottomSheet 배경을 불투명한 검정색으로, 내용은 투명하게 설정 -->
    <style name="TransparentBottomSheetDialogTheme2" parent="Theme.AppCompat.Light">
        <!-- 배경은 검정색으로 설정 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 내용은 투명하게 설정 -->
        <item name="android:colorBackground">#E6000000</item>
    </style>

    <!-- BottomSheet 배경을 불투명한 투명으로, 내용은 투명하게 설정 -->
    <style name="TransparentBottomSheetDialogTheme3" parent="Theme.AppCompat.Light">
        <!-- 배경은 검정색으로 설정 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 내용은 투명하게 설정 -->
        <item name="android:colorBackground">#00ffffff</item>
    </style>


    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/main</item> <!-- 선택된 날짜의 배경색을 여기서 설정 -->
    </style>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="colorControlNormal">@color/main</item>
    </style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundedBottomSheetStyle</item>
    </style>

    <style name="RoundedBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/solid_no_stroke</item>
    </style>


</resources>