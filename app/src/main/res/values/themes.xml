<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TO_ME_FROM_ME" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="windowNoTitle">true</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>

    </style>

    <style name="Theme.TO_ME_FROM_ME" parent="Base.Theme.TO_ME_FROM_ME" />

    <!--    BottomSheet 배경색상-->
    <style name="TransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>


    <!-- BottomSheet 배경을 불투명한 검정색으로, 내용은 투명하게 설정 -->
    <style name="TransparentBottomSheetDialogTheme2" parent="Theme.AppCompat.Light">
        <!-- 배경은 검정색으로 설정 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 내용은 투명하게 설정 -->
        <item name="android:colorBackground">#E6000000</item>
    </style>

</resources>