<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_all"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="몇 시에 받고 싶어?"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <com.example.to_me_from_me.LetterWrite.CustomTimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:gravity="center"
        android:theme="@style/CustomTimePicker"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="10dp">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:text="취소"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/notosans"
            android:background="@drawable/solid_stroke_q"/>

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:text="확인"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/notosans"
            android:background="@drawable/ok_btn_main"/>
    </LinearLayout>


</LinearLayout>