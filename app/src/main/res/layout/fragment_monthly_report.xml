<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_corner_top"
    tools:context=".StatisticalReport.MonthlyReportFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calender"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/year_month_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:text="날짜"
                android:textSize="20dp"
                android:fontFamily="@font/bnotosans"
                android:paddingRight="10dp"/>

            <ImageView
                android:id="@+id/month_down_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_down"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/rectangle"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자아존중감 검사 결과"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/notosans"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:textColor="@color/dark"
                    android:textSize="18dp"/>

                <ImageView
                    android:id="@+id/month_tip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_error" />
            </LinearLayout>

            <ImageView
                android:id="@+id/score_iv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="65dp"
                android:src="@drawable/ic_graph_03" />

            <TextView
                android:id="@+id/user_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00점"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/bnotosans"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/report_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="낮은"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosans" />
                <TextView
                    android:id="@+id/report2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 자존감을 갖고 있어"
                    android:textColor="@color/Gray3"
                    android:fontFamily="@font/notosans"
                    android:textSize="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/report_emo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="😢"
                    android:textColor="@color/Gray3"
                    android:fontFamily="@font/notosans"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/rectangle"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감정 통계"
                    android:layout_marginStart="20dp"
                    android:paddingRight="10dp"
                    android:fontFamily="@font/notosans"
                    android:textStyle="bold"
                    android:textColor="@color/dark"
                    android:textSize="18dp"/>

                <ImageView
                    android:id="@+id/month_tip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_error" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <!-- 왼쪽에 큰 ProgressBar와 퍼센트 텍스트 -->
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:layout_gravity="center">

                    <ProgressBar
                        android:id="@+id/pb_l"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:progress="55"
                        android:max="100"
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/progress_exited"/>

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_above="@+id/percentTextLarge"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="-100dp"
                        android:src="@drawable/ic_my_01_s" />

                    <TextView
                        android:id="@+id/pb_l_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/progressBarLarge"
                        android:layout_marginTop="85dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/bnotosans"
                        android:textColor="@color/Gray1"
                        android:text="55%"
                        android:textSize="23dp" />

                </RelativeLayout>

                <!-- 오른쪽에 4개의 작은 ProgressBar와 퍼센트 텍스트 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- 첫 번째 행: 작은 ProgressBar 1과 2 -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/pb_1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:progress="23"
                                android:max="100"
                                android:indeterminateOnly="false"
                                android:progressDrawable="@drawable/progress_happy"/>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="-5dp"
                                android:src="@drawable/ic_my_02_s" />

                            <TextView
                                android:id="@+id/pb_1_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="45dp"
                                android:fontFamily="@font/notosans"
                                android:text="23%"
                                android:textColor="@color/Gray1"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:layout_marginStart="8dp">

                            <ProgressBar
                                android:id="@+id/pb_2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:progress="45"
                                android:max="100"
                                android:indeterminateOnly="false"
                                android:progressDrawable="@drawable/progress_normal"/>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="-5dp"
                                android:src="@drawable/ic_my_03_s" />

                            <TextView
                                android:id="@+id/pb_2_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="45dp"
                                android:fontFamily="@font/notosans"
                                android:text="23%"
                                android:textColor="@color/Gray1"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- 두 번째 행: 작은 ProgressBar 3과 4 -->
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:layout_weight="1">

                            <ProgressBar
                                android:id="@+id/pb_3"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:progress="78"
                                android:max="100"
                                android:indeterminateOnly="false"
                                android:progressDrawable="@drawable/progress_sad"/>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="-5dp"
                                android:src="@drawable/ic_my_04_s" />

                            <TextView
                                android:id="@+id/pb_3_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="45dp"
                                android:fontFamily="@font/notosans"
                                android:text="23%"
                                android:textColor="@color/Gray1"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:layout_marginStart="8dp">

                            <ProgressBar
                                android:id="@+id/pb_4"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:progress="90"
                                android:max="100"
                                android:indeterminateOnly="false"
                                android:progressDrawable="@drawable/progress_upset"/>

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="-5dp"
                                android:src="@drawable/ic_my_05_s" />

                            <TextView
                                android:id="@+id/pb_4_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="45dp"
                                android:fontFamily="@font/notosans"
                                android:text="23%"
                                android:textColor="@color/Gray1"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="250dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:gravity="center"
                    android:layout_marginTop="30dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView1"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="80dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="#FBDDCF"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_01"/>
                            <TextView
                                android:id="@+id/adjective1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="자랑스러운"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/notosans" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="80dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="#CFE8DF"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_02"/>
                            <TextView
                                android:id="@+id/adjective2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="자랑스러운"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/notosans" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="80dp"
                        android:layout_marginEnd="15dp"
                        android:backgroundTint="#FEF2CC"
                        app:cardElevation="5dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:src="@drawable/ic_03"/>
                            <TextView
                                android:id="@+id/adjective3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="자랑스러운"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/notosans" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
        <ImageView
            android:id="@+id/line_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:visibility="gone"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/round_corner_all"
            android:elevation="15dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="편지 작성하러 가기"/>
    </LinearLayout>
</ScrollView>
