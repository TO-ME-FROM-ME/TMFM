<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_all"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ImageView
            android:id="@+id/year_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/ic_left"/>
        <TextView
            android:id="@+id/year_month_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2024년 9월"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/bnotosans"
            android:layout_weight="2"
            android:padding="8dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/ic_right"/>
    </LinearLayout>


    <GridLayout
        android:id="@+id/month_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:columnCount="3"
        android:rowCount="4"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="1월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="2월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="3월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="4월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="5월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="6월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="7월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="8월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="9월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="10월"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="8dp"
                android:background="@drawable/solid_no_stroke"
                android:textColor="@color/black"
                android:clickable="true"
                android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="11월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="12월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:textColor="@color/black"
            android:clickable="true"
            android:focusable="true" />

    </GridLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="10dp">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:text="취소"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/notosans"
            android:background="@drawable/solid_stroke_q"/>

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:text="확인"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/notosans"
            android:background="@drawable/ok_btn_main"/>
    </LinearLayout>
</LinearLayout>
