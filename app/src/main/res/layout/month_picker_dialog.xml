<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_all"
    android:orientation="vertical">

    <!-- 상단에 년/월을 표시하는 TextView -->
    <TextView
        android:id="@+id/year_month_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2024년 9월"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="8dp" />

    <!-- 3x4 그리드 형태로 월을 표시하는 GridLayout -->
    <GridLayout
        android:id="@+id/month_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="3"
        android:rowCount="4"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="1월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="2월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="3월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="4월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="5월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="6월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="7월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="8월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="9월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />
        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="10월"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="@drawable/solid_no_stroke"
        android:clickable="true"
        android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="11월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="@drawable/solid_no_stroke"
            android:clickable="true"
            android:focusable="true" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="12월"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true" />

    </GridLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="10dp">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:text="취소"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/notosans"
            android:background="@drawable/solid_stroke_q"/>

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:text="확인"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/notosans"
            android:background="@drawable/ok_btn_main"/>
    </LinearLayout>
</LinearLayout>
