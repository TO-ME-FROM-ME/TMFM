<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CategoryFragment"
    android:background="@drawable/round_corner_top"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="3. 소중한 존재 우리 동생이 같은 상황에
                         있다고 가정하고, 응원하는 마음을
                         담아 공감의 말을 적어봐. 💌"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:textSize="20dp"
        android:fontFamily="@font/font_gangwon"
        android:background="@drawable/solid_stroke"
        android:padding="15dp"
        android:hint="사랑하는 우리 동생에게 진심을 담아 보내는 편지야." />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:background="@drawable/solid_no_stroke"
        android:elevation="20dp"
        android:text="다음" />


</LinearLayout>
