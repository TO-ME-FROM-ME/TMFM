<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".StatisticalReport.StatisticalReportActivity">


  <TextView
      android:id="@+id/title_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="10dp"
      android:textStyle="bold"
      android:textColor="@color/black"
      android:text="통계 리포트"
      android:textSize="22dp" />
  <RelativeLayout
      android:id="@+id/switch_rl"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_centerHorizontal="true"
      android:layout_marginHorizontal="15dp"
      android:layout_marginVertical="20dp"
      android:background="@drawable/bg_switch"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title_tv">


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/shopMain_switchOnOff_sc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:checked="true"
        android:textColor="@color/white"
        android:thumb="@drawable/thumb_selector"
        app:track="@drawable/track_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

      <TextView
          android:id="@+id/shopMain_switchLimited_tv"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:text="월간 리포트"
          android:textColor="@color/black"
          android:textSize="15sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/shopMain_switchRegular_tv"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:gravity="center"
          android:text="연간 리포트"
          android:textColor="@color/white"
          android:textSize="15sp"
          android:textStyle="bold" />

    </LinearLayout>


  </RelativeLayout>

  <androidx.viewpager2.widget.ViewPager2
      android:id="@+id/report_vp2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/switch_rl" />
</LinearLayout>