<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".LetterWrite.RecorderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_msg"/>
            <TextView
                android:id="@+id/sentence_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/dark"
                android:textStyle="bold"
                android:text="나는 어제보다\n 더 성장하는 사람이다."
                android:textSize="30dp"
                android:fontFamily="@font/font_gangwon"/>

        </FrameLayout>


        <ImageView
            android:id="@+id/recorder_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:elevation="3dp"
            android:src="@drawable/ic_reco" />

        <TextView
            android:id="@+id/text_tv"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="마지막으로 따뜻한 말을 건네보자."
            android:fontFamily="@font/notosans"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/count_ll"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/one_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:elevation="3dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/oval_shape_w"/>
        <View
            android:layout_width="50dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/two_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="3dp"
            android:text="2"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/oval_shape_w"/>


    </LinearLayout>

    <Button
        android:id="@+id/start_btn"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:background="@drawable/solid_no_main"
        android:elevation="2dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="시작" />


</LinearLayout>