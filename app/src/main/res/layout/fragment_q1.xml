<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CategoryFragment"
    android:background="@drawable/white_round_top_border"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="1. 왜 두려운, 불안한 감정을 느꼈어?"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:textSize="18dp"
        android:background="@drawable/solid_stroke"
        android:padding="15dp"
        android:hint="왜 그런 감정을 느꼈는지 곰곰히 생각해봐." />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/solid_no_stroke"
        android:elevation="20dp"
        android:text="다음"/>


</LinearLayout>
