<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:background="@drawable/round_corner_top"
        android:padding="20dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="40dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="편지 작성 완료!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="마음이 따뜻해지는 경험을 했길 바라 ♥"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/solid_no_stroke"
            android:elevation="10dp"
            android:text="다음"/>

    </LinearLayout>

    <!-- BottomSheetDialog 위에 겹치는 편지 아이콘 -->
    <ImageView
        android:id="@+id/ic_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_letter"
        android:layout_gravity="top|center_horizontal"
        android:adjustViewBounds="true"
        android:layout_marginTop="0dp"/>

</FrameLayout>
